generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  nom              String?  @db.VarChar(102)
  prenom           String?  @db.VarChar(15)
  pseudo           String   @unique @db.VarChar(50)
  email            String   @unique
  password         String   // Hach√©
  telephone        String?  @db.VarChar(10)
  is2FAEnabled     Boolean  @default(false)
  receiveNews      Boolean  @default(false)
  acceptedCGU      Boolean
  passwordResets   PasswordResetToken[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model PasswordResetToken {
  id         String   @id @default(uuid())
  token      String   @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  status     String   // pending, used, expired
  expiresAt  DateTime
  createdAt  DateTime @default(now())
}
